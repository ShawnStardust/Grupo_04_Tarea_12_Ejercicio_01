<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ID y Fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvPagoId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pago #1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#4CAF50"/>

            <TextView
                android:id="@+id/tvPagoFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2024"
                android:textSize="14sp"
                android:textColor="#666666"/>

        </LinearLayout>

        <!-- Comprobante -->
        <TextView
            android:id="@+id/tvPagoComprobante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boleta - B001-00001"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <!-- Reserva -->
        <TextView
            android:id="@+id/tvPagoReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reserva ID: 1"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"/>

        <!-- Monto e Impuesto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvPagoMonto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Monto: $450.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>

            <TextView
                android:id="@+id/tvPagoImpuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Impuesto: $50.00"
                android:textSize="14sp"
                android:textColor="#666666"/>

        </LinearLayout>

        <!-- Botones de acciÃ³n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditPago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:textSize="12sp"
                android:backgroundTint="#FF9800"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnDeletePago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textSize="12sp"
                android:backgroundTint="#F44336"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>