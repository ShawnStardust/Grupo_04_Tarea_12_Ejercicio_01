<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lista de Pagos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="Agregar Pago"/>

    </LinearLayout>

    <!-- RecyclerView para lista de pagos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPagos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Mensaje cuando no hay datos -->
    <TextView
        android:id="@+id/tvEmptyPagos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="No hay pagos registrados"
        android:textSize="16sp"
        android:textColor="#999999"
        android:visibility="gone"/>

</LinearLayout>